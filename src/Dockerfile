FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["Database.AspNetCoreExample.csproj", "./"]
RUN dotnet restore "Database.AspNetCoreExample.csproj"
COPY . .
WORKDIR "/src/"
RUN dotnet build "Database.AspNetCoreExample.csproj" -c Release -o /app/build --no-restore

FROM build AS publish
RUN dotnet publish "Database.AspNetCoreExample.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Database.AspNetCoreExample.dll"]